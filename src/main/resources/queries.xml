<?xml version="1.0" encoding="UTF-8" ?>

<properties>
    <query key="user.find">
        SELECT *
        FROM USER
        WHERE user_id=?
    </query>
    <query key="user.findByEmail">
        SELECT *
        FROM USER
        WHERE email=?
    </query>
    <query key="user.save">
        INSERT INTO USER (name, email, role)
        VALUES(?, ?, ?)
    </query>
    <query key="user.update">
        UPDATE user SET
        name=?
        WHERE user_id=?
    </query>
    <query key="user.softDelete">
        UPDATE user SET
        delete_date=?
        WHERE user_id=?
    </query>
</properties>